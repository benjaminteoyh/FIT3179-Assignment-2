{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/benjaminteoyh/FIT3179-Assignment-2/refs/heads/main/Data/highestEducation.csv"
  },
  "params": [
    {
      "name": "State_selection",
      "bind": {
        "input": "select",
        "options": [null, "NSW", "VIC", "QLD", "SA", "WA", "TAS", "NT", "ACT"],
        "labels": ["Show All", "NSW", "VIC", "QLD", "SA", "WA", "TAS", "NT", "ACT"],
        "name": "Select State: "
      }
    },
    {
      "name": "Education_selection",
      "bind": {
        "input": "select",
        "options": [null, "Postgraduate Degree", "Graduate Diploma/Graduate Certificate", "Bachelor Degree", "Advanced Diploma/Diploma", "Certificate III/IV", "Year 12 or equivalent", "Year 11", "Year 10", "Below Year 10"],
        "labels": ["Show All", "Postgraduate Degree", "Graduate Diploma/Graduate Certificate", "Bachelor Degree", "Advanced Diploma/Diploma", "Certificate III/IV", "Year 12 or equivalent", "Year 11", "Year 10", "Below Year 10"],
        "name": "Select Education Level: "
      }
    }
  ],
  "transform": [
    {"filter": "State_selection == null || datum.State == State_selection"},
    {"filter": "Education_selection == null || datum.ed == Education_selection"},
    {
      "calculate": "datum.ed == 'Postgraduate Degree' ? 1 : datum.ed == 'Graduate Diploma/Graduate Certificate' ? 2 : datum.ed == 'Bachelor Degree' ? 3 : datum.ed == 'Advanced Diploma/Diploma' ? 4 : datum.ed == 'Certificate III/IV' ? 5 : datum.ed == 'Year 12 or equivalent' ? 6 : datum.ed == 'Year 11' ? 7 : datum.ed == 'Year 10' ? 8 : 9",
      "as": "ed_rank"
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "ed",
          "type": "nominal",
          "axis": {"labelAngle": -45},
          "title": null,
          "sort": {
            "op": "min",
            "field": "ed_rank"
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "Persons",
          "type": "quantitative",
          "stack": true,
          "title": "Number Of People With Qualification"
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "title": "State",
          "sort": ["NSW", "VIC", "QLD", "WA", "SA", "ACT", "TAS", "NT"]
        },
        "tooltip": [
          {"field": "ed", "type": "nominal", "title": "Highest Education"},
          {"field": "Persons", "type": "quantitative", "format": ",", "title": "Population"},
          {"field": "State", "type": "nominal", "title": "State"}
        ],
        "order": {
          "aggregate": "sum",
          "field": "Persons",
          "sort": "descending"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -5
      },
      "encoding": {
        "x": {
          "field": "ed",
          "type": "nominal",
          "sort": {
            "op": "min",
            "field": "ed_rank"
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "Persons",
          "type": "quantitative"
        },
        "text": {
          "aggregate": "sum",
          "field": "Persons",
          "type": "quantitative",
          "format": ","
        }
      }
    }
  ]
}

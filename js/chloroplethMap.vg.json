{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 300,
  "title": "Education Levels in Australia by State and Year",
  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "vconcat": [
    {
      "width": 400,
      "height": 300,
      "projection": {"type": "mercator"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/benjaminteoyh/FIT3179-A2/refs/heads/main/js/Aussie.topojson",
            "format": {"type": "topojson", "feature": "STE_2016_AUST"}
          },
          "transform": [
            {
              "lookup": "properties.STE_NAME16",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/benjaminteoyh/FIT3179-A2/refs/heads/main/Data/educationData.csv"
                },
                "key": "State",
                "fields": ["Persons"]
              }
            },
            {"filter": "datum.Year == Year_selection"}
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "color": {
              "field": "Persons",
              "type": "quantitative",
              "title": "Number of People",
              "scale": {
                "type": "threshold",
                "domain": [100000, 300000, 600000, 1000000, 1500000],
                "scheme": "blues"
              }
            },
            "tooltip": [
              {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
              {"field": "Persons", "type": "quantitative", "format": ",", "title": "Number of People"},
              {"field": "Year", "type": "ordinal", "title": "Year"}
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/benjaminteoyh/FIT3179-A2/refs/heads/main/js/Aussie.topojson",
            "format": {"type": "topojson", "feature": "STE_2016_AUST"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "black"}
        }
      ]
    }
  ]
}
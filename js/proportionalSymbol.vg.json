{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "title": "Number of people currently enrolled in study",
  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "projection": {     
    "parallels": [-16, -37], 
    "rotate": [-134, 0, 0], 
    "type": "conicEqualArea"   
},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/benjaminteoyh/FIT3179-Assignment-2/refs/heads/main/js/Aussie.topojson",
        "format": {"type": "topojson", "feature": "STE_2016_AUST"}
      },
      "mark": {"type": "geoshape", "fill": "white", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/benjaminteoyh/FIT3179-Assignment-2/refs/heads/main/Data/educationData.csv"
      },
      "transform": [
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "circle", "opacity": 0.8},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Persons",
          "type": "quantitative",
          "title": "Enrolled Students",
          "scale": {
            "type": "threshold",
            "domain": [20000, 50000, 100000, 400000, 700000, 1000000],
            "range": [25, 50, 150, 300, 500, 1000, 1500]
          },
          "legend": {"format": ".2s"}
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Persons", "type": "quantitative", "format": ",", "title": "Number of Enrolled Students"},
          {"field": "Year", "type": "ordinal"}
        ]
      }
    }
  ]
}